@model OperationManagement.Models.ProcessStatus

@{
    ViewData["Title"] = "Edit Process Status";
}

<h1>Edit @Model.Process.Name Status</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStatus">
            <input hidden asp-for="ProcessId" />
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ProcessId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
