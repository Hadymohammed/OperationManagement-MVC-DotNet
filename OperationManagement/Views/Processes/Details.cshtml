@model OperationManagement.Models.Process

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="row">
    <div class="col-md-6">
        <h4>Process</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
                <dt class="col-sm-2">
                    Category
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Status</h4>
        <hr />
        @if (Model.Statuses != null && Model.Statuses.Count > 0)
        {
            <dl class="row">
                @foreach (var status in Model.Statuses)
                {
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => status.Name)
                    </dd>
                }
            </dl>
        }
        else
        {
            <p>No Status found.</p>
        }
    </div>
</div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
