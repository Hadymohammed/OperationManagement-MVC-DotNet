<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OperatoBusiness</title>
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OperationManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-T0j4lIrrL2c7sCeuPhBBrPLFCX/6b8YIOsI1XaYUaFAegbXLv3ytnQb2PdBCw4ewtsJ8KzGmC3QHEjzR3Up85w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OperatoBusiness</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.Identity.IsAuthenticated){
                            @if(User.IsInRole(UserRoles.User))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-gear"></i> Setting
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-controller="Products" asp-action="Index">Products</a>
                                        <a class="dropdown-item" asp-controller="Processes" asp-action="Index">Processes</a>
                                        <a class="dropdown-item" asp-controller="ProcessCategories" asp-action="Index">Process Categories</a>
                                        <a class="dropdown-item" asp-controller="Specifications" asp-action="Index">Specifications</a>
                                        <a class="dropdown-item" asp-controller="Components" asp-action="Index">Components</a>
                                        <a class="dropdown-item" asp-controller="Measurements" asp-action="Index">Measurements</a>
                                        <a class="dropdown-item" asp-controller="DeliveryLocations" asp-action="Index">DeliveryLocations</a>
                                        <a class="dropdown-item" asp-controller="Categories" asp-action="Index">Product Categories</a>
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                                </li>
                            }
                            else{
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else{
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="JoinRequest" asp-controller="Account">Join Us</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OperationManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    <!--FontAwesome-->
    <script src="https://kit.fontawesome.com/b51c93118e.js" crossorigin="anonymous"></script>

</body>
</html>
