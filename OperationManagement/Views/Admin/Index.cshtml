@model AdminIndexVM

@{
    ViewData["Title"] = "Administration";
}
<style>
    .box {
        width: 200px;
        height: 200px;
        background-color: #ffffff;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
        text-align: center;
        padding: 20px;
    }

    .header {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .number {
        font-size: 30px;
        color: #007bff;
    }
</style>
<div class="d-flex md-3 justify-content-center">
    <div class="box">
        <div class="header">Number of Customers</div>
        <div class="number">@Model.NumberOfCustomers</div>
    </div>
    <div class="box">
        <div class="header">Number of Orders</div>
        <div class="number">@Model.NumberOfOrders</div>
    </div>

</div>
<!--JoinRequests-->
<table class="table">
    <thead>
        <tr>
            <th>
                Enterprise Name
            </th>
            <th>
                Staff Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PendingUsers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Enterprise.Name)
                </td>
                <td>
                    @item.FirstName @item.LastName
                </td>
                <td>
                    <a asp-action="ReviewJoinRequest" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!--AllEnterprises-->
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Enterprises)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <span>Details</span> |
                    <span>Delete</span>
                </td>
            </tr>
        }
    </tbody>
</table>