@model OperationManagement.Models.Specification

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="row">
        <div class="col-md-6">
            <h4>Specification</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>

        <div class="col-md-6">
            <div class="Statues">
                <h4>Status</h4>
                <hr />
                @if (Model.Statuses != null && Model.Statuses.Count > 0)
                {
                    <dl class="row">
                        @foreach (var status in Model.Statuses)
                        {
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => status.Name)
                            </dd>
                        }
                    </dl>
                }
                else
                {
                    <p>No Status found.</p>
                }
            </div>
            <div class="Options">
                <h4>Options</h4>
                <hr />
                @if (Model.Options != null && Model.Options.Count > 0)
                {
                    <dl class="row">
                        @foreach (var option in Model.Options)
                        {
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => option.Name)
                            </dd>
                        }
                    </dl>
                }
                else
                {
                    <p>No Options found.</p>
                }
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
