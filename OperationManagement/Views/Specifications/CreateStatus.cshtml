@model OperationManagement.Models.SpecificationStatus

@{
    ViewData["Title"] = "Create Specification Status";
}

<h1>Create @Model.Specification.Name Status</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStatus">
            <input hidden asp-for="SpecificationId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.SpecificationId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
