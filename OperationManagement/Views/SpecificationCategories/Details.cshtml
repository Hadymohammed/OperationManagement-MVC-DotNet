@model OperationManagement.Models.SpecificationCategory

@{
    ViewData["Title"] = "Details";
}

<h1>Specification Category Details</h1>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Category Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h1>Specifications</h1>

<p>
    <a asp-controller="Specifications" asp-action="Create" asp-route-CategoryId="@Model.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Specification Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Specifications) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="Specifications" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Specifications" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Specifications" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
