@model IEnumerable<OperationManagement.Models.Component>

@{
    ViewData["Title"] = "Index";
}

<h1>Components</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suppler)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @{
                        var url = Consts.ComponentImgUrl;
                        if(item.Photos!=null&&item.Photos.Count()!=0){
                            url = @item.Photos.First().PhotoURL;
                        }
                    }
                    <img style="
                        width: 50px;
                        height: auto;
                        border-radius: 50%;
                    " src="@url" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suppler)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
