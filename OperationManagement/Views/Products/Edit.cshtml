                        <thead>
                        <th>
                            Measurement
                        </th>
                        <th>Value</th>
                        <th>Unit</th>
                        <th></th>
                        </thead>
                        <tbody>
                            @{
                                i = 0;
                            }
                            @foreach (var meag in Model.Measurements)
                            {
                                var exist = Model.ProductMeasurements[@i].Value != null;
