                                                    <option value="@unit">@unit</option>
                                                }
                                            </select>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteMeasurement" asp-controller="Products" asp-route-id="@Model.ProductMeasurements[@i].Id" class="btn btn-danger" onclick="return confirmDelete('Measurement')">Delete</a>
                                        </td>
                                    </tr>
