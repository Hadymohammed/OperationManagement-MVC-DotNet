                                            <input asp-for="@Model.ProductSpecifications[@i].Item2.Date" />
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <textarea asp-for="@Model.ProductSpecifications[@i].Item2.Remark"></textarea>
                                        </div>
                                    </td>
                                    <td>
